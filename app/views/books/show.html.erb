<div class= "container">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>
      <%= render "users/info", user: @book.user %>
      <h2>New book</h2>
      <%= render "new", book: @book_new %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= image_tag @book.user.get_profile_image(80,80) %>
          <%= link_to user_path(@book.user_id) do %>
            <p><%= @book.user.name %></p>
          <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
         <% if @book.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorite_path(@book), method: :delete do %>
              <i class="fa-solid fa-heart" style="color:red;"> <%= @book.favorites.count %></i>
            <% end %>  
          </td>
         <% else %>
           <td>
            <%= link_to book_favorite_path(@book), method: :post do %>
              <i class="fa-solid fa-heart" style="color:blue;">︎ <%= @book.favorites.count %></i>
            <% end %>
           </td>
         <% end %>
          <td>
            コメント数:<%= @book.book_comments.count %>
          </td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
          </td>
          <% end %>
        </tr>
      </table>

      <table>
        <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <%= link_to user_path(book_comment.user) do %>
              <%= image_tag book_comment.user.get_profile_image(100,100) %></td>
            <% end %>
          <td><%= book_comment.comment %></td>
          <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
        <% end %>
      </table>
      <%= form_with model: [@book, @book_comment] do |f| %>
        <%= f.text_area :comment, class: 'form-control'%>
        <%= f.submit "送信"%>
      <% end %>
    </div>
  </div>
</div>