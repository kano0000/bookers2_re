<div class= "container">
  <div class= "row">
    <div class= "col-md-3">
      <h2>User info</h2>
      <%= render "users/info", user: @book.user %>
      <h2>New book</h2>
      <%= render "new", book: @book_new %>
    </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= image_tag @book.user.get_profile_image(80,80) %>
          <%= link_to user_path(@book.user_id) do %>
            <p><%= @book.user.name %></p>
          <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
        </tr>
      </table>

    </div>
  </div>
</div>