<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
     </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
        </td>
      <td>
        <%= link_to book_path(book) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
      <% if book.favorited_by?(current_user) %>
      <td>
        <%= link_to book_favorite_path(book), method: :delete do %>
          <i class="fa-solid fa-heart" style="color:red;"> <%= book.favorites.count %></i>
        <% end %>
      </td>
      <% else %>
      <td>
        <%= link_to book_favorite_path(book), method: :post do %>
          <i class="fa-solid fa-heart" style="color:blue;">︎ <%= book.favorites.count %></i>
      </td>
      <% end %>
      <td>
        コメント数:<%= book.book_comments.count %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>